<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity_setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".activity_setting">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nanum"
            android:text="목표 금액 설정하기"
            android:textSize="30sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/nanum"
            android:hint="목표금액"
            app:boxBackgroundColor="#1F4554"
            app:hintTextColor="#1F4554">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/st_limitmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_fixlimit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum"
            android:backgroundTint="#1F4554"
            android:textColor="#ffffff"
            android:text="수정하기" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nanum"
            android:backgroundTint="#316478"
            android:textColor="#ffffff"
            android:text="로그아웃" />

        <Button
            android:id="@+id/btn_signout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nanum"
            android:backgroundTint="#316478"
            android:textColor="#ffffff"
            android:text="회원 탈퇴" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:fontFamily="@font/nanum"
        android:gravity="center"
        android:text="백민세·최수림"
        android:textSize="15sp" />

</LinearLayout>